<p id="notice"><%= notice %></p>

<h1>Courses</h1>
<%= link_to 'Add New Course', new_course_path %>
<div><%= pluralize(@course.size, 'Course') %> found</div>


<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Grade Points</th>
      <th>max_students</th>
      <th>min_students</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @course.each do |t| %>
      <tr>
        <td><%= t.cid %></td>
        <td><%= t.cname %></td>
        <td><%= t.grade_point %></td>
        <td><%= t.max_students %></td>
        <td><%= t.min_students %></td>
        <td><%= link_to 'Show', course_path(t.id) %></td>
        <td><%= link_to 'Edit', edit_course_path(t.id) %></td>
        <td><%= link_to 'Delete', delete_course_path(t.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
